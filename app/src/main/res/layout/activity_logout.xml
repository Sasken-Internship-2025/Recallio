<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#F5F5DC"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/logoutConfirmText"
        android:text="Are you sure you want to logout?"
        android:textSize="18sp"
        android:textColor="#4B2E2E"
        android:layout_marginBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/confirmLogoutButton"
        android:text="Yes, Logout"
        android:layout_width="match_parent"
        android:background="@drawable/rounded_button"
        android:layout_height="wrap_content"
        android:backgroundTint="#8B5E3C"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/cancelLogoutButton"
        android:text="Cancel"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#B0AFAF"
        android:textColor="#000000" />
</LinearLayout>
